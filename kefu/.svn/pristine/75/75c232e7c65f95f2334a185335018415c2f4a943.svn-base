<!DOCTYPE html>
<html lang="zh_CN" xmlns:th="http://www.thymeleaf.org">
<meta charset="utf-8">
<head th:include="include::header"></head>
<body class="gray-bg">
	<div class="wrapper wrapper-content animated fadeInRight">
		<div class="row">
			<div class="col-sm-12">
				<div class="ibox float-e-margins">
					<div class="ibox-content">
						<form class="form-horizontal m-t" id="signupForm">
							<input id="roleId" name="roleId" type="hidden"
								th:value="${role.roleId}"> <input id="menuIds"
								name="menuIds" type="hidden">
							<div class="form-group">
								<label class="col-sm-3 control-label">角色名：</label>
								<div class="col-sm-8">
									<input required id="roleName" name="roleName" class="form-control"
										type="text" th:value="${role.roleName}">
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-3 control-label">上级角色编码：</label>
								<div class="col-sm-8">
									<input id="upRoleId" name="upRoleId" class="form-control"
										   type="text" th:value="${role.upRoleId}">
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-3 control-label">角色说明：</label>
								<div class="col-sm-8">
									<input required id="remark" name="remark" class="form-control"
										type="text" th:value="${role.remark}">
								</div>
							</div>
							<!--<div class="form-group">
								<label class="col-sm-3 control-label">菜单权限：</label>
								<div class="col-sm-8">
									<div id="menuTree"></div>
								</div>
							</div>-->

						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div th:include="include::footer"></div>
	<script th:src="@{/js/appjs/sys/role/edit.js}"></script>
</body>

</html>
