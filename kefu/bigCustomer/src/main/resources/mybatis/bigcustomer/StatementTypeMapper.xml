<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yunda.base.bigcustomer.dao.StatementTypeDao">

	<select id="get" resultType="com.yunda.base.bigcustomer.domain.StatementTypeDO">
		select `id`,`consult_type`,`statement_result`,`status` from consult_statement_type where id = #{value}
	</select>

	<select id="list" resultType="com.yunda.base.bigcustomer.domain.StatementTypeDO">
		select `id`,`consult_type`,`statement_result`,`status` from consult_statement_type
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="consultType != null and consultType != ''"> and consult_type = #{consultType} </if>
		  		  <if test="statementResult != null and statementResult != ''"> and statement_result = #{statementResult} </if>
		  		  <if test="status != null and status != ''"> and status = #{status} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by #{sort}, #{order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from consult_statement_type
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="consultType != null and consultType != ''"> and consult_type = #{consultType} </if>
		  		  <if test="statementResult != null and statementResult != ''"> and statement_result = #{statementResult} </if>
		  		  <if test="status != null and status != ''"> and status = #{status} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.yunda.base.bigcustomer.domain.StatementTypeDO" useGeneratedKeys="true" keyProperty="id">
		insert into consult_statement_type
		(
			`consult_type`, 
			`statement_result`, 
			`status`
		)
		values
		(
			#{consultType}, 
			#{statementResult}, 
			#{status}
		)
	</insert>
	 
	<update id="update" parameterType="com.yunda.base.bigcustomer.domain.StatementTypeDO">
		update consult_statement_type 
		<set>
			<if test="consultType != null">`consult_type` = #{consultType}, </if>
			<if test="statementResult != null">`statement_result` = #{statementResult}, </if>
			<if test="status != null">`status` = #{status}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from consult_statement_type where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from consult_statement_type where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

	<select id="getJiedanList" resultType="java.lang.String">
		select distinct statement_result from consult_statement_type where consult_type = #{consultType}
	</select>

</mapper>