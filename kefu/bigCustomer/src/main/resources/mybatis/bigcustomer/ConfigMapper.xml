<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yunda.base.bigcustomer.dao.ConfigDao">

	<select id="get" resultType="com.yunda.base.bigcustomer.domain.ConfigDO">
		select `id`,`consult_source`,`consult_type`,`deal_shi_xiao`,`state` from consult_config where id = #{value}
	</select>

	<select id="list" resultType="com.yunda.base.bigcustomer.domain.ConfigDO">
		select `id`,`consult_source`,`consult_type`,`deal_shi_xiao`,`state` from consult_config
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="consultSource != null and consultSource != ''"> and consult_source = #{consultSource} </if>
		  		  <if test="consultType != null and consultType != ''"> and consult_type = #{consultType} </if>
		  		  <if test="dealShiXiao != null and dealShiXiao != ''"> and deal_shi_xiao = #{dealShiXiao} </if>
		  		  <if test="state != null and state != ''"> and state = #{state} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by #{sort}, #{order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from consult_config
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="consultSource != null and consultSource != ''"> and consult_source = #{consultSource} </if>
		  		  <if test="consultType != null and consultType != ''"> and consult_type = #{consultType} </if>
		  		  <if test="dealShiXiao != null and dealShiXiao != ''"> and deal_shi_xiao = #{dealShiXiao} </if>
		  		  <if test="state != null and state != ''"> and state = #{state} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.yunda.base.bigcustomer.domain.ConfigDO" useGeneratedKeys="true" keyProperty="id">
		insert into consult_config
		(
			`consult_source`, 
			`consult_type`, 
			`deal_shi_xiao`, 
			`state`
		)
		values
		(
			#{consultSource}, 
			#{consultType}, 
			#{dealShiXiao}, 
			#{state}
		)
	</insert>
	 
	<update id="update" parameterType="com.yunda.base.bigcustomer.domain.ConfigDO">
		update consult_config 
		<set>
			<if test="consultSource != null">`consult_source` = #{consultSource}, </if>
			<if test="consultType != null">`consult_type` = #{consultType}, </if>
			<if test="dealShiXiao != null">`deal_shi_xiao` = #{dealShiXiao}, </if>
			<if test="state != null">`state` = #{state}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from consult_config where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from consult_config where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>