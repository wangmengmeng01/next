<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yunda.base.bigcustomer.dao.OrganizationManageDao">

	<select id="get" resultType="com.yunda.base.bigcustomer.domain.OrganizationManageDO">
		select `id`,`organization_num`,`organization_name`,`organization_level`,`state` from organization_manage where id = #{value}
	</select>

	<select id="list" resultType="com.yunda.base.bigcustomer.domain.OrganizationManageDO">
		select `id`,`organization_num`,`organization_name`,`organization_level`,`state` from organization_manage
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="organizationNum != null and organizationNum != ''"> and organization_num = #{organizationNum} </if>
		  		  <if test="organizationName != null and organizationName != ''"> and organization_name like '%${organizationName}%' </if>
		  		  <if test="organizationLevel != null and organizationLevel != ''"> and organization_level = #{organizationLevel} </if>
		  		  <if test="state != null and state != ''"> and state = #{state} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by #{sort}, #{order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from organization_manage
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="organizationNum != null and organizationNum != ''"> and organization_num = #{organizationNum} </if>
		  		  <if test="organizationName != null and organizationName != ''"> and organization_name like '%${organizationName}%' </if>
		  		  <if test="organizationLevel != null and organizationLevel != ''"> and organization_level = #{organizationLevel} </if>
		  		  <if test="state != null and state != ''"> and state = #{state} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.yunda.base.bigcustomer.domain.OrganizationManageDO" useGeneratedKeys="true" keyProperty="id">
		insert into organization_manage
		(
			`organization_num`, 
			`organization_name`, 
			`organization_level`, 
			`state`
		)
		values
		(
			#{organizationNum}, 
			#{organizationName}, 
			#{organizationLevel}, 
			#{state}
		)
	</insert>
	 
	<update id="update" parameterType="com.yunda.base.bigcustomer.domain.OrganizationManageDO">
		update organization_manage 
		<set>
			<if test="organizationNum != null">`organization_num` = #{organizationNum}, </if>
			<if test="organizationName != null">`organization_name` = #{organizationName}, </if>
			<if test="organizationLevel != null">`organization_level` = #{organizationLevel}, </if>
			<if test="state != null">`state` = #{state}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from organization_manage where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from organization_manage where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

	<update id="stateUpdate">
		update organization_manage
		<set>
			`state` = #{state}
		</set>
		where id = #{id}
	</update>

	<select id="listOrganization" resultType="String">
		select CONCAT(`organization_name`,'-',`organization_num`) from organization_manage where state=1
	</select>

	<select id="listOrganizationName" resultType="String">
		select `organization_name` from organization_manage where state=1
	</select>

	<select id="countByOrganizationNum" resultType="int">
		select count(*) from organization_manage where organization_num = #{organizationNum}
	</select>

	<select id="listOrgName" resultType="String">
		select `organization_name` from organization_manage where organization_num = #{orgCode}
	</select>
</mapper>