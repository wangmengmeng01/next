<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yunda.base.bigcustomer.dao.UserManageDao">

	<select id="get" resultType="com.yunda.base.bigcustomer.domain.UserManageDO">
		select `id`,`user_num`,`user_name`,`role`,`organization`,`state` from user_manage where id = #{value}
	</select>

	<select id="list" resultType="com.yunda.base.bigcustomer.domain.UserManageDO">
		select `id`,`user_num`,`user_name`,`role`,`organization`,`state` from user_manage
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="userNum != null and userNum != ''"> and user_num = #{userNum} </if>
		  		  <if test="userName != null and userName != ''"> and user_name = #{userName} </if>
		  		  <if test="role != null and role != ''"> and role = #{role} </if>
		  		  <if test="organization != null and organization != ''"> and organization = #{organization} </if>
		  		  <if test="state != null and state != ''"> and state = #{state} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by #{sort}, #{order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from user_manage
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="userNum != null and userNum != ''"> and user_num = #{userNum} </if>
		  		  <if test="userName != null and userName != ''"> and user_name = #{userName} </if>
		  		  <if test="role != null and role != ''"> and role = #{role} </if>
		  		  <if test="organization != null and organization != ''"> and organization = #{organization} </if>
		  		  <if test="state != null and state != ''"> and state = #{state} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.yunda.base.bigcustomer.domain.UserManageDO">
		insert into user_manage
		(
			`user_num`, 
			`user_name`, 
			`role`, 
			`organization`, 
			`state`
		)
		values
		(
			#{userNum}, 
			#{userName}, 
			#{role}, 
			#{organization}, 
			#{state}
		)
	</insert>
	 
	<update id="update" parameterType="com.yunda.base.bigcustomer.domain.UserManageDO">
		update user_manage 
		<set>
			<if test="userNum != null">`user_num` = #{userNum}, </if>
			<if test="userName != null">`user_name` = #{userName}, </if>
			<if test="role != null">`role` = #{role}, </if>
			<if test="organization != null">`organization` = #{organization}, </if>
			<if test="state != null">`state` = #{state}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from user_manage where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from user_manage where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

	<update id="stateUpdate">
		update user_manage
		<set>
			`state` = #{state}
		</set>
		where id = #{id}
	</update>

</mapper>