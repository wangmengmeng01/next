<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yunda.base.system.dao.BigareaDao">

	<select id="get" resultType="com.yunda.base.system.domain.BigareaDO">
		select `bigareaName` from bigarea where bigareaName = #{value}
	</select>

	<select id="list" resultType="com.yunda.base.system.domain.BigareaDO">
		select `bigareaName` from bigarea
        <where>  
		  		  <if test="bigareaname != null and bigareaname != ''"> and bigareaName = #{bigareaname} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by #{sort}, #{order}
            </when>
			<otherwise>
                order by bigareaName desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from bigarea
		 <where>  
		  		  <if test="bigareaname != null and bigareaname != ''"> and bigareaName = #{bigareaname} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.yunda.base.system.domain.BigareaDO">
		insert into bigarea
		(
			`bigareaName`
		)
		values
		(
			#{bigareaname}
		)
	</insert>
	 
	<update id="update" parameterType="com.yunda.base.system.domain.BigareaDO">
		update bigarea 
		<set>
		</set>
		where bigareaName = #{bigareaname}
	</update>
	
	<delete id="remove">
		delete from bigarea where bigareaName = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from bigarea where bigareaName in 
		<foreach item="bigareaname" collection="array" open="(" separator="," close=")">
			#{bigareaname}
		</foreach>
	</delete>
	<select id="getAllBigareaName" resultType="com.yunda.base.system.domain.BigareaDO">
		SELECT bigarea as bigarea_name from sys_province 
		where bigarea != null or bigarea != '' 
		GROUP BY bigarea	
	</select>
</mapper>