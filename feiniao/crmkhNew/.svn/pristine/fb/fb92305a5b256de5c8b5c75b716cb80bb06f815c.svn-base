<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yunda.base.system.dao.AlarmSmsDao">

	<select id="get" resultType="com.yunda.base.system.domain.AlarmSmsDO">
		select `user_name`,`alarm_time`,`province_name`,`province_count`,`bigarea` from crmkhv2_alarm_sms where user_name = #{value}
	</select>

	<select id="list" resultType="com.yunda.base.system.domain.AlarmSmsDO">
		select `user_name`,`alarm_time`,`province_name`,`province_count`,`bigarea` from crmkhv2_alarm_sms
        <where>  
		  		  <if test="userName != null and userName != ''"> and user_name = #{userName} </if>
		  		  <if test="alarmTime != null and alarmTime != ''"> and alarm_time = #{alarmTime} </if>
		  		  <if test="provinceName != null and provinceName != ''"> and province_name = #{provinceName} </if>
		  		  <if test="provinceCount != null and provinceCount != ''"> and province_count = #{provinceCount} </if>
		  		  <if test="bigarea != null and bigarea != ''"> and bigarea = #{bigarea} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by #{sort}, #{order}
            </when>
			<otherwise>
                order by user_name desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from crmkhv2_alarm_sms
		 <where>  
		  		  <if test="userName != null and userName != ''"> and user_name = #{userName} </if>
		  		  <if test="alarmTime != null and alarmTime != ''"> and alarm_time = #{alarmTime} </if>
		  		  <if test="provinceName != null and provinceName != ''"> and province_name = #{provinceName} </if>
		  		  <if test="provinceCount != null and provinceCount != ''"> and province_count = #{provinceCount} </if>
		  		  <if test="bigarea != null and bigarea != ''"> and bigarea = #{bigarea} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.yunda.base.system.domain.AlarmSmsDO">
		insert into crmkhv2_alarm_sms
		(
			`user_name`, 
			`alarm_time`, 
			`province_name`, 
			`province_count`, 
			`bigarea`
		)
		values
		(
			#{userName}, 
			#{alarmTime}, 
			#{provinceName}, 
			#{provinceCount}, 
			#{bigarea}
		)
	</insert>
	 
	<update id="update" parameterType="com.yunda.base.system.domain.AlarmSmsDO">
		update crmkhv2_alarm_sms 
		<set>
			<if test="alarmTime != null">`alarm_time` = #{alarmTime}, </if>
			<if test="provinceName != null">`province_name` = #{provinceName}, </if>
			<if test="provinceCount != null">`province_count` = #{provinceCount}, </if>
			<if test="bigarea != null">`bigarea` = #{bigarea}</if>
		</set>
		where user_name = #{userName}
	</update>
	
	<delete id="remove">
		delete from crmkhv2_alarm_sms where user_name = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from crmkhv2_alarm_sms where user_name in 
		<foreach item="userName" collection="array" open="(" separator="," close=")">
			#{userName}
		</foreach>
	</delete>

	<insert id="saveOrUpdate" parameterType="com.yunda.base.system.domain.AlarmSmsDO">
		insert into crmkhv2_alarm_sms
		(
			`user_name`,
			`alarm_time`,
			`province_name`,
			`province_count`,
			`bigarea`
		)
		values
		(
			#{userName},
			#{alarmTime},
			#{provinceName},
			#{provinceCount},
			#{bigarea}
		)
		on DUPLICATE KEY UPDATE
		 province_count =province_count +1
	</insert>
</mapper>